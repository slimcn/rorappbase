<h1><%= t('Editing'.downcase) %> : <%= t('activerecord.models.user') %></h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
     <%= f.label :name, t('activerecord.attributes.user.name') %><br />
    <%= f.text_field :name %>
  </p>
  <p>
     <%= f.label :password, t('activerecord.attributes.user.password') %><br />
    <%= f.text_field :password %>
  </p>
<p><%= f.label :password_confirmation, t('activerecord.attributes.user.Confirm_Password'.downcase) %><br/>
<%= f.password_field :password_confirmation %></p>

<p>
    <%= f.label :employe_id, t('activerecord.attributes.user.employe_id') %><br />
    <%= f.select :employe_id, Employe.all(:order=>"code").collect {|p| [p.code+p.name, p.id]}, {:include_blank=>true, :index=>""} %>
  </p>
  <p>
     <%= f.label :remarks, t('activerecord.attributes.user.remarks') %><br />
    <%= f.text_area :remarks %>
  </p>
  <p>
    <%= f.submit t('Update'.downcase) %>
  </p>
<% end %>

<%= link_to t('Show'.downcase), @user %> |
<%= link_to t('Back'.downcase), users_path %>
