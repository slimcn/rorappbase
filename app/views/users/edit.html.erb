<h1><%= t('Editing'.downcase) %> : <%= t('activerecord.models.user') %></h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
     <%= f.label :name, t('activerecord.attributes.user.name') %><br />
    <%= f.text_field :name %>
  </p>
  <p>
     <%= f.label :password, t('activerecord.attributes.user.password') %><br />
    <%= f.text_field :password %>
  </p>
  <p>
     <%= f.label :remarks, t('activerecord.attributes.user.remarks') %><br />
    <%= f.text_area :remarks %>
  </p>
  <p>
    <%= f.submit t('Update'.downcase) %>
  </p>
<% end %>

<%= link_to t('Show'.downcase), @user %> |
<%= link_to t('Back'.downcase), users_path %>
