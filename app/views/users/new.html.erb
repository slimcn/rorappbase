<h1><%= t('New'.downcase) %> : <%= t('activerecord.models.user') %></h1>
<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
<p><%= f.label :login %><br/>
<%= f.text_field :login %></p>

<p><%= f.label :name %><br/>
<%= f.text_field :name %></p>

<p><%= f.label :email %><br/>
<%= f.text_field :email %></p>

<p><%= f.label :password %><br/>
<%= f.password_field :password %></p>

<p><%= f.label :password_confirmation, t('activerecord.attributes.user.Confirm_Password'.downcase) %><br/>
<%= f.password_field :password_confirmation %></p>

<p>
    <%= f.label :employe_id, t('activerecord.attributes.user.employe_id') %><br />
    <%= f.select :employe_id, Employe.all(:order=>"code").collect {|p| [p.code+p.name, p.id]}, {:include_blank=>true, :index=>""} %>
  </p>

  <p>
    <%= f.submit t('Create'.downcase) %>
  </p>
<% end -%>

<%= link_to t('Back'.downcase), employes_path %>
