<h1><%= t('Editing'.downcase) %> : <%= t('activerecord.models.employes_user') %></h1>

<% form_for(@employes_user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :user_id, t('activerecord.attributes.employes_user.user_id') %><br />
    <%= f.select :user_id, User.find(:all, :order=>"name").collect {|p| [p.name, p.id]} %>
  </p>
  <p>
    <%= f.label :employe_id, t('activerecord.attributes.employes_user.employe_id') %><br />
    <%= f.select :employe_id, Employe.find(:all, :order=>"code").collect {|p| [p.code+p.name, p.id]} %>
  </p>
  <p>
     <%= f.label :remarks, t('activerecord.attributes.employes_user.remarks') %><br />
    <%= f.text_area :remarks %>
  </p>
  <p>
    <%= f.submit t('Update'.downcase) %>
  </p>
<% end %>

<%= link_to t('Show'.downcase), @employes_user %> |
<%= link_to t('Back'.downcase), employes_users_path %>
