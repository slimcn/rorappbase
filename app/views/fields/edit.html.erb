<h1><%= t('Editing'.downcase) %> : <%= t('activerecord.models.field') %></h1>

<% form_for(@field) do |f| %>
  <%= f.error_messages %>

  <p>
     <%= f.label :code, t('activerecord.attributes.field.code') %><br />
    <%= f.text_field :code %>
  </p>
  <p>
     <%= f.label :name, t('activerecord.attributes.field.name') %><br />
    <%= f.text_field :name %>
  </p>
  <p>
     <%= f.label :rec_type, t('activerecord.attributes.field.rec_type') %><br />
    <%= f.text_field :rec_type %>
  </p>
  <p>
     <%= f.label :form_id, t('activerecord.attributes.field.form_id') %><br />
    <%= f.text_field :form_id %>
  </p>
  <p>
     <%= f.label :name_cn, t('activerecord.attributes.field.name_cn') %><br />
    <%= f.text_field :name_cn %>
  </p>
  <p>
     <%= f.label :remarks, t('activerecord.attributes.field.remarks') %><br />
    <%= f.text_area :remarks %>
  </p>
  <p>
    <%= f.submit t('Update'.downcase) %>
  </p>
<% end %>

<%= link_to t('Show'.downcase), @field %> |
<%= link_to t('Back'.downcase), fields_path %>
