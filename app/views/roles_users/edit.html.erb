<h1><%= t('Editing'.downcase) %> : <%= t('activerecord.models.roles_user') %></h1>

<% form_for(@roles_user) do |f| %>
  <%= f.error_messages %>

  <p>
     <%= f.label :user_id, t('activerecord.attributes.roles_user.user_id') %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
     <%= f.label :role_id, t('activerecord.attributes.roles_user.role_id') %><br />
    <%= f.text_field :role_id %>
  </p>
  <p>
     <%= f.label :remarks, t('activerecord.attributes.roles_user.remarks') %><br />
    <%= f.text_area :remarks %>
  </p>
  <p>
    <%= f.submit t('Update'.downcase) %>
  </p>
<% end %>

<%= link_to t('Show'.downcase), @roles_user %> |
<%= link_to t('Back'.downcase), roles_users_path %>
