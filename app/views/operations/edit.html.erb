<h1><%= t('Editing'.downcase) %> : <%= t('activerecord.models.operation') %></h1>

<% form_for(@operation) do |f| %>
  <%= f.error_messages %>

  <p>
     <%= f.label :code, t('activerecord.attributes.operation.code') %><br />
    <%= f.text_field :code %>
  </p>
  <p>
     <%= f.label :rec_type, t('activerecord.attributes.operation.rec_type') %><br />
    <%= f.text_field :rec_type %>
  </p>
  <p>
     <%= f.label :name, t('activerecord.attributes.operation.name') %><br />
    <%= f.text_field :name %>
  </p>
  <p>
     <%= f.label :parent_id, t('activerecord.attributes.operation.parent_id') %><br />
    <%= f.text_field :parent_id %>
  </p>
  <p>
     <%= f.label :name_cn, t('activerecord.attributes.operation.name_cn') %><br />
    <%= f.text_field :name_cn %>
  </p>
  <p>
     <%= f.label :url, t('activerecord.attributes.operation.url') %><br />
    <%= f.text_field :url %>
  </p>
  <p>
     <%= f.label :remarks, t('activerecord.attributes.operation.remarks') %><br />
    <%= f.text_area :remarks %>
  </p>
  <p>
    <%= f.submit t('Update'.downcase) %>
  </p>
<% end %>

<%= link_to t('Show'.downcase), @operation %> |
<%= link_to t('Back'.downcase), operations_path %>
