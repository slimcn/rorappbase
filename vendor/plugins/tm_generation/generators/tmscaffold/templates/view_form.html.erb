
<%% form_for(@<%= singular_name %>) do |f| %>
  <%%= f.error_messages %>

<% for attribute in attributes -%>
  <p>
    <%%= f.label :<%= attribute.name %>, t('activerecord.attributes.<%= singular_name %>.<%= attribute.name %>') %><br />
    <%%= f.<%= attribute.field_type %> :<%= attribute.name %> %>
  </p>
<% end -%>
  <p>
    <%%= f.submit t('Save'.downcase) %>
  </p>
<%% end %>
